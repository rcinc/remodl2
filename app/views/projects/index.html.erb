            <p class="totem-hd"> <%= link_to p.title, p %> </p>
            <p class="totem-bd"><%= p.description.truncate(20) %></p>
            <p class="totem-ft"><%= p.created_at.strftime("%B %d, %Y") %></p>
            <% if p.bids.last == nil %>
            <% if current_user.profile.vendor %>
              <p class="totem-ft"> "No Bids Yet",<%= link_to "Click Here to Bid", p %></b></span><br>
profiles_path(activity.owner_id)
<% end %>
              <% else %>
                <p class="totem-ft">lastest bid<br>$ <%= p.bids.last.bid %></span><br>
                <% end %></p>
          </div>
        </div>
        <div class="split-right">
          <% if p.url1 == "" %>
          <img><%= image_tag "http://www.medillnews847.com/madeinchicago/midwife/img/home.png" %>
          <% else %>
          <img> <%= image_tag project.url1%></img>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </a>
